<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane maxHeight="600.0" maxWidth="800.0" minHeight="600.0" minWidth="800.0" prefHeight="800.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.dep10.app.controller.MainLoggingController">
   <children>
      <VBox layoutY="250.0" spacing="50.0" AnchorPane.bottomAnchor="250.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="250.0">
         <children>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Username">
                     <font>
                        <Font name="System Bold" size="21.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtUsername" />
               </children>
            </VBox>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Password">
                     <font>
                        <Font name="System Bold" size="21.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtPassword" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets left="200.0" right="200.0" />
         </padding>
      </VBox>
      <ToggleButton fx:id="btnShopOwner" layoutY="-1.0" mnemonicParsing="false" onAction="#btnShopOwnerOnAction" prefHeight="103.0" prefWidth="400.0" text="Shop Owner Login">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </ToggleButton>
      <ToggleButton fx:id="btnCashier" layoutX="400.0" layoutY="-1.0" mnemonicParsing="false" onAction="#btnCashierOnAction" prefHeight="103.0" prefWidth="400.0" text="Cashier Login">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </ToggleButton>
   </children>
</AnchorPane>
